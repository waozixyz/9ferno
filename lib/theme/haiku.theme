shell_background = #FFFFFFFF      # Shell background (white)

# Toolbar fine-grained colors (indices 28-35) - Haiku theme
toolbar_hover = #E0E0E0FF         # Toolbar hover
toolbar_btn_hover = #FFD030FF     # Button hover (yellow)
