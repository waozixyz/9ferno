# Haiku Theme for TaijiOS
# Authentic Haiku OS colors with yellow/gold accent

# Basic colors
foreground = #000000FF
background = #F7F7F7FF
background_light = #FFFFFFFF
background_dark = #D0D0D0FF

# Selection colors (yellow accent)
select = #FFC000FF
select_background = #FFC000FF
select_background_light = #FFD030FF
select_background_dark = #E0A000FF
select_foreground = #000000FF

# Active element colors (yellow accent)
active_background = #FFC000FF
active_background_light = #FFD030FF
active_background_dark = #E0A000FF
active_foreground = #000000FF

# Disabled elements
disabled_foreground = #808080FF

# Highlight
highlight_foreground = #000000FF

# Fill & border
fill = #F7F7F7FF
transparent = #00000000

# Title bar colors (17-21) - Haiku style
title_background = #FFC000FF      # Yellow (active)
title_inactive = #E0E0E0FF        # Grey (inactive)
